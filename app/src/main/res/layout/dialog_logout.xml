<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_corner_10"
        android:layout_margin="@dimen/space_24"
        android:padding="@dimen/space_16"
        >

        <TextView
            android:id="@+id/confirmField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_logout"
            android:textColor="@color/text_black"
            android:fontFamily="@font/roboto_medium_600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/sureField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sure_about_logout"
            android:textColor="@color/text_black"
            android:layout_marginTop="@dimen/space_24"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/confirmField" />

        <ImageView
            android:id="@+id/closeImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/noBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_green_corner_10"
            android:text="No"
            android:textAllCaps="false"
            android:paddingHorizontal="42dp"
            app:layout_constraintTop_toBottomOf="@id/sureField"
            android:layout_marginTop="@dimen/space_24"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/yesBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_corner_10"
            android:text="Yes"
            android:paddingHorizontal="42dp"
            android:backgroundTint="@color/grey_400"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="@id/noBtn"
            android:textColor="@color/text_black"
            app:layout_constraintEnd_toEndOf="parent"
            />







    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>