<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.mainFragments.CartFragment">

    <data />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_100">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="6dp"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_back2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvText"
                app:layout_constraintBottom_toBottomOf="@id/tvDelivery"
                app:tint="@color/grey_900" />

            <TextView
                android:id="@+id/tvText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium_500"
                android:text="My Cart"
                android:textColor="@color/grey_900"
                android:textSize="@dimen/text_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tvDelivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium_500"
                android:text="Delivery in 11 minutes"
                android:textColor="@color/green_500"
                android:textSize="@dimen/text_12"
                android:visibility="gone"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/tvText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/cartScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@+id/clPay"
            app:layout_constraintTop_toBottomOf="@+id/clHeader">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_100">



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/exceptionLay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8"
                    android:elevation="6dp"
                    android:visibility="gone"
                    android:background="@drawable/bg_white_top_corners_5"
                    android:backgroundTint="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:scaleType="fitXY"
                        app:layout_constraintTop_toBottomOf="@id/messTxt"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/wave_5"
                        />

                    <TextView
                        android:id="@+id/messTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium_600"
                        android:text="@string/_d_items_in_your_cart_are_in_stock"
                        android:textColor="@color/mark_negative"
                        android:textSize="@dimen/text_16"
                        android:textStyle="italic"
                        android:textAlignment="center"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:backgroundTint="@color/red_50"
                        android:background="@drawable/bg_white_top_corners_5"
                        android:paddingHorizontal="@dimen/space_16"
                        android:paddingVertical="@dimen/space_8"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/defectRecView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/messTxt"
                        tools:itemCount="2"
                        tools:listitem="@layout/item_cart_updated_horiz" />



                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/saveAmtLay"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:elevation="6dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/exceptionLay"
                    android:background="@drawable/img_bg_save_rupees"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:elevation="6dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/space_24"
                        android:src="@drawable/icon_piggy_bank"
                        />

                    <TextView
                        android:id="@+id/tvOfferText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium_500"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:elevation="6dp"
                        android:textStyle="italic"
                        android:text="Save Rs 31! Free Delivery"
                        android:textColor="@color/white"
                        android:layout_marginEnd="@dimen/space_32"
                        android:layout_marginStart="@dimen/space_8"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/text_14"
                        />


                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCartItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@color/white"
                    android:elevation="6dp"
                    android:paddingBottom="@dimen/space_8"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/saveAmtLay"
                    tools:itemCount="0"
                    tools:listitem="@layout/item_horizontal_product" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clMoreProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8"
                    android:elevation="1dp"
                    android:background="@color/white"
                    android:padding="@dimen/space_8"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rvCartItems">

                    <TextView
                        android:id="@+id/tvDeliveryText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium_600"
                        android:text="Before you checkout"
                        android:textColor="@color/grey_900"
                        android:textSize="@dimen/text_16"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvProducts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvDeliveryText"
                        tools:itemCount="0"
                        tools:listitem="@layout/item_cart_product" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clCoupon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8"
                    android:background="@color/white"
                    android:elevation="6dp"
                    android:visibility="visible"
                    android:paddingHorizontal="@dimen/space_16"
                    android:paddingVertical="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clMoreProducts">

                    <ImageView
                        android:id="@+id/ivCoupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_discount"
                        app:layout_constraintBottom_toBottomOf="@id/subCouponTxtView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvCouponTitle" />

                    <TextView
                        android:id="@+id/tvCouponTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_16"
                        android:fontFamily="@font/roboto_medium_500"
                        android:text="Apply Coupons"
                        android:textColor="@color/green_700"
                        android:textSize="@dimen/text_14"
                        app:layout_constraintStart_toEndOf="@+id/ivCoupon"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/subCouponTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_16"
                        android:fontFamily="@font/roboto_medium_500"
                        android:text="Check our Discount and Coupons"
                        android:textColor="#7CA4B2"
                        android:textSize="@dimen/text_12"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ivCoupon"
                        app:layout_constraintTop_toBottomOf="@id/tvCouponTitle" />

                    <ImageView
                        android:id="@+id/tvCouponDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="-180"
                        android:paddingHorizontal="@dimen/space_16"
                        android:paddingVertical="@dimen/space_4"
                        android:src="@drawable/icon_back2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/grey_700" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clTaxPrices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8"
                    android:background="@color/white"
                    android:elevation="6dp"
                    android:padding="@dimen/space_16"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clCoupon">


                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium_600"
                        android:text="Bill Details"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_14"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/itemTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_16"
                        android:drawablePadding="@dimen/space_8"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Cart total"
                        android:textColor="@color/grey_700"
                        android:textSize="@dimen/text_14"
                        app:drawableStartCompat="@drawable/icon_cart_sum"
                        app:layout_constraintStart_toStartOf="@+id/textView2"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" />

                    <TextView
                        android:id="@+id/tvItemPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/rs_00"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_14"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/itemTotal" />

                    <TextView
                        android:id="@+id/itemDeliveryCharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_6"
                        android:drawablePadding="@dimen/space_8"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Delivery charge"
                        android:textColor="@color/grey_700"
                        android:textSize="@dimen/text_14"
                        app:drawableStartCompat="@drawable/icon_cart_delivery"
                        app:drawableTint="@color/grey_700"
                        app:layout_constraintStart_toStartOf="@+id/itemTotal"
                        app:layout_constraintTop_toBottomOf="@+id/tvItemPrice" />

                    <TextView
                        android:id="@+id/tvDelCharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/rs_00"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_14"
                        app:layout_constraintEnd_toStartOf="@+id/tvFree"
                        app:layout_constraintTop_toTopOf="@id/itemDeliveryCharge" />

                    <TextView
                        android:id="@+id/tvFree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="FREE"
                        android:visibility="gone"
                        android:textColor="@color/green_500"
                        android:textSize="@dimen/text_14"
                        app:layout_constraintEnd_toEndOf="@+id/tvItemPrice"
                        app:layout_constraintTop_toTopOf="@id/itemDeliveryCharge" />


                    <TextView
                        android:id="@+id/appliedCouponField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_6"
                        android:drawablePadding="@dimen/space_8"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Coupon discount"
                        android:textColor="@color/grey_700"
                        android:textSize="@dimen/text_14"
                        app:drawableStartCompat="@drawable/icon_coupon_discount"
                        app:layout_constraintStart_toStartOf="@+id/itemTotal"
                        app:layout_constraintTop_toBottomOf="@+id/itemDeliveryCharge" />

                    <TextView
                        android:id="@+id/appCouponTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/rs_00"
                        android:textColor="@color/green_500"
                        android:textSize="@dimen/text_14"
                        app:layout_constraintEnd_toStartOf="@+id/tvFree"
                        app:layout_constraintTop_toTopOf="@id/appliedCouponField" />




                    <View
                        android:id="@+id/dashLine"
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/space_16"
                        android:background="@drawable/bg_dashed_line"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/appliedCouponField"
                        />


                    <TextView
                        android:id="@+id/convChargeField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_16"
                        android:drawablePadding="@dimen/space_8"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Convenience Charge"
                        android:textColor="@color/grey_700"
                        android:textSize="@dimen/text_14"
                        app:drawableStartCompat="@drawable/icon_delivery_tip"
                        app:layout_constraintStart_toStartOf="@+id/itemTotal"
                        app:layout_constraintTop_toBottomOf="@+id/dashLine" />

                    <TextView
                        android:id="@+id/convChargeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/rs_00"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_14"
                        app:layout_constraintEnd_toEndOf="@+id/tvItemPrice"
                        app:layout_constraintTop_toTopOf="@id/convChargeField" />



                    <TextView
                        android:id="@+id/grandTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_16"
                        android:fontFamily="@font/roboto_medium_500"
                        android:text="Grand Total"
                        android:textColor="@color/grey_900"
                        android:textSize="@dimen/text_16"
                        app:layout_constraintStart_toStartOf="@+id/itemDeliveryCharge"
                        app:layout_constraintTop_toBottomOf="@+id/convChargeField" />

                    <TextView
                        android:id="@+id/tvGrandTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium_500"
                        android:text="@string/rs_f"
                        android:textColor="@color/grey_900"
                        android:textSize="@dimen/text_16"
                        app:layout_constraintEnd_toEndOf="@+id/tvItemPrice"
                        app:layout_constraintTop_toTopOf="@+id/grandTotal" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clSavings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_16"
                        android:background="@color/red_50"
                        android:paddingHorizontal="@dimen/space_16"
                        android:paddingVertical="@dimen/space_8"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@+id/tvGrandTotal">

                        <TextView
                            android:id="@+id/totalSaving"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium_500"
                            android:text="Your total savings"
                            android:textColor="@color/red_500"
                            android:textSize="@dimen/text_14"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvSavingText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-4dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Includes Rs 15 savings through free delivery"
                            android:textColor="@color/red_500"
                            android:textSize="@dimen/text_10"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/tvSavingAmount"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/totalSaving" />


                        <TextView
                            android:id="@+id/tvSavingAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium_500"
                            android:text="Rs 44"
                            android:textColor="@color/red_500"
                            android:textSize="@dimen/text_16"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shimmer_auto_start="true"
                    app:shimmer_duration="800">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <include layout="@layout/shimmer_product_horizontal" />
                        <include layout="@layout/shimmer_product_horizontal" />
                        <include layout="@layout/shimmer_product_horizontal" />
                        <include layout="@layout/shimmer_product_horizontal" />
                        <include layout="@layout/shimmer_cart_bill" />
                    </LinearLayout>

                </com.facebook.shimmer.ShimmerFrameLayout>




                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clDeliveryInstructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_16"
                    android:background="@color/white"
                    android:elevation="1dp"
                    android:padding="@dimen/space_16"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clTaxPrices">


                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium_600"
                        android:text="Delivery instructions"
                        android:textColor="@color/grey_900"
                        android:textSize="@dimen/text_16"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RadioGroup
                        android:id="@+id/dayRadGr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/space_8"
                        app:layout_constraintTop_toBottomOf="@id/textView5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >

                        <RadioButton
                            android:id="@+id/todayRadB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today"
                            android:layout_weight="1"
                            android:checked="true"
                            android:textSize="@dimen/text_14"/>

                        <RadioButton
                            android:id="@+id/tommorowRadB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tommorrow"
                            android:layout_weight="1"
                            android:textSize="@dimen/text_14"/>

                        <RadioButton
                            android:id="@+id/customizeRadB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Customize"
                            android:layout_weight="1"
                            android:textSize="@dimen/text_14"/>

                    </RadioGroup>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/deliveryEdInput"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="Delivery date"
                        app:boxBackgroundColor="@color/white"
                        android:visibility="gone"
                        app:hintAnimationEnabled="false"
                        app:layout_constraintTop_toBottomOf="@id/dayRadGr"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:startIconCheckable="true"
                        app:startIconDrawable="@drawable/icon_calendar"
                        app:startIconTint="@null">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/deliveryEdTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_button_border_corner"
                            android:backgroundTint="#F4F6F8"
                            android:focusable="false"
                            android:inputType="none"
                            android:textSize="@dimen/text_16" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <HorizontalScrollView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_8"
                        android:scrollbars="none"
                        android:visibility="visible"
                        app:layout_constraintTop_toBottomOf="@id/dayRadGr"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">


                        <RadioGroup
                            android:id="@+id/slotTimeRadGr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <RadioButton
                                android:id="@+id/time7_10RB"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7:00 - 10:00 AM"
                                android:paddingStart="@dimen/space_8"
                                android:textSize="@dimen/text_14"/>

                            <RadioButton
                                android:id="@+id/time12_3RB"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
