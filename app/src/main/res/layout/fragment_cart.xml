<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.mainFragments.CartFragment">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_100">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="6dp"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_back2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvText"
                app:layout_constraintBottom_toBottomOf="@id/tvDelivery"
                app:tint="@color/grey_900" />

            <TextView
                android:id="@+id/tvText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium_500"
                android:text="My Cart"
                android:textColor="@color/grey_900"
                android:textSize="@dimen/text_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tvDelivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium_500"
                android:text="Delivery in 11 minutes"
                android:textColor="@color/green_500"
                android:textSize="@dimen/text_12"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/tvText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@+id/clPay"
            app:layout_constraintTop_toBottomOf="@+id/clHeader">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_100">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/exceptionLay"
                    android:layout_width="0dp"
                    android:layout_height="300dp"
                    android:layout_marginTop="@dimen/space_8"
                    android:elevation="6dp"
                    android:visibility="visible"
                    android:background="@drawable/bg_white_top_corners_5"
                    android:backgroundTint="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:scaleType="fitXY"
                        app:layout_constraintTop_toBottomOf="@id/messTxt"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/wave_5"
                        />

                    <TextView
                        android:id="@+id/messTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium_600"
                        android:text="3 items in your cart are not in stock"
                        android:textColor="@color/mark_negative"
                        android:textSize="@dimen/text_16"
                        android:textStyle="italic"
                        android:textAlignment="center"
                        android:backgroundTint="@color/red_50"
                        android:background="@drawable/bg_white_top_corners_5"
                        android:paddingHorizontal="@dimen/space_16"
                        android:paddingVertical="@dimen/space_8"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/defectRecView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/messTxt"
                        tools:itemCount="2"
                        tools:listitem="@layout/item_cart_product" />



                </androidx.constraintlayout.widget.ConstraintLayout>


                <LinearLayout
                    android:id="@+id/saveAmtLay"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:elevation="6dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/exceptionLay"
                    android:background="@drawable/img_bg_save_rupees"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:elevation="6dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/space_24"
                        android:src="@drawable/icon_piggy_bank"
                        />

                    <TextView
                        android:id="@+id/tvOfferText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium_500"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:elevation="6dp"
                        android:textStyle="italic"
                        android:text="Save Rs 31! Free Delivery"
                        android:textColor="@color/white"
                        android:layout_marginEnd="@dimen/space_32"
                        android:layout_marginStart="@dimen/space_8"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/text_14"
                        />


                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCartItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@color/white"
                    android:elevation="6dp"
                    android:paddingBottom="@dimen/space_8"
                    android:visibility="visible"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/saveAmtLay"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_horizontal_product" />



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clMoreProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8"
                    android:elevation="1dp"
                    android:background="@color/white"
                    android:padding="@dimen/space_8"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rvCartItems">

                    <TextView
                        android:id="@+id/tvDeliveryText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium_600"
                        android:text="Before you checkout"
                        android:textColor="@color/grey_900"
                        android:textSize="@dimen/text_16"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvProducts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvDeliveryText"
                        tools:itemCount="2"
                        tools:listitem="@layout/item_cart_product" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clCoupon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8"
                    android:background="@color/white"
                    android:elevation="6dp"
                    android:paddingHorizontal="@dimen/space_16"
                    android:paddingVertical="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clMoreProducts">

                    <ImageView
                        android:id="@+id/ivCoupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_discount"
                        app:layout_constraintBottom_toBottomOf="@id/subCouponTxtView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvCouponTitle" />

                    <TextView
                        android:id="@+id/tvCouponTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_16"
                        android:fontFamily="@font/roboto_medium_500"
                        android:text="Apply Coupons"
                        android:textColor="@color/green_700"
                        android:textSize="@dimen/text_14"
                        app:layout_constraintStart_toEndOf="@+id/ivCoupon"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/subCouponTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_16"
                        android:fontFamily="@font/roboto_medium_500"
                        android:text="Check our Discount and Coupons"
                        android:textColor="#7CA4B2"
                        android:textSize="@dimen/text_12"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ivCoupon"
                        app:layout_constraintTop_toBottomOf="@id/tvCouponTitle" />

                    <ImageView
                        android:id="@+id/tvCouponDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="-180"
                        android:src="@drawable/icon_back2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/grey_700" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clTaxPrices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8"
                    android:background="@color/white"
                    android:elevation="6dp"
                    android:padding="@dimen/space_16"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clCoupon">


                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium_600"
                        android:text="Bill Details"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_14"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/itemTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_16"
                        android:drawablePadding="@dimen/space_8"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Cart total"
                        android:textColor="@color/grey_700"
                        android:textSize="@dimen/text_14"
                        app:drawableStartCompat="@drawable/icon_cart_sum"
                        app:layout_constraintStart_toStartOf="@+id/textView2"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" />

                    <TextView
                        android:id="@+id/tvItemPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Rs 381"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_14"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/itemTotal" />

                    <TextView
                        android:id="@+id/itemDeliveryCharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_6"
                        android:drawablePadding="@dimen/space_8"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Delivery charge"
                        android:textColor="@color/grey_700"
                        android:textSize="@dimen/text_14"
                        app:drawableStartCompat="@drawable/icon_cart_delivery"
                        app:drawableTint="@color/grey_700"
                        app:layout_constraintStart_toStartOf="@+id/itemTotal"
                        app:layout_constraintTop_toBottomOf="@+id/tvItemPrice" />

                    <TextView
                        android:id="@+id/tvDelCharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/space_8"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Rs 15"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_14"
                        app:layout_constraintEnd_toStartOf="@+id/tvFree"
                        app:layout_constraintTop_toTopOf="@id/itemDeliveryCharge" />

                    <TextView
                        android:id="@+id/tvFree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="FREE"
                        android:textColor="@color/green_500"
                        android:textSize="@dimen/text_14"
                        app:layout_constraintEnd_toEndOf="@+id/tvItemPrice"
                        app:layout_constraintTop_toTopOf="@id/itemDeliveryCharge" />

                    <View
                        android:id="@+id/dashLine"
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/space_16"
                        android:background="@drawable/bg_dashed_line"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvFree"
                        />


                    <TextView
                        android:id="@+id/tipDeliveryPartner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_16"
                        android:drawablePadding="@dimen/space_8"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Tip for delivery partner"
                        android:textColor="@color/grey_700"
                        android:textSize="@dimen/text_14"
                        app:drawableStartCompat="@drawable/icon_delivery_tip"
                        app:layout_constraintStart_toStartOf="@+id/itemTotal"
                        app:layout_constraintTop_toBottomOf="@+id/dashLine" />

                    <TextView
                        android:id="@+id/tvTipDeliveryPartner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Rs 20"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_14"
                        app:layout_constraintEnd_toEndOf="@+id/tvItemPrice"
                        app:layout_constraintTop_toTopOf="@id/tipDeliveryPartner" />


                    <TextView
                        android:id="@+id/platformFeeField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_6"
                        android:drawablePadding="@dimen/space_8"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Platform service fee"
                        android:textColor="@color/grey_700"
                        android:textSize="@dimen/text_14"
                        app:drawableStartCompat="@drawable/icon_namaste"
                        app:layout_constraintStart_toStartOf="@+id/itemTotal"
                        app:layout_constraintTop_toBottomOf="@+id/tipDeliveryPartner" />

                    <TextView
                        android:id="@+id/platformFeeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Rs 20"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_14"
                        app:layout_constraintEnd_toEndOf="@+id/tvItemPrice"
                        app:layout_constraintTop_toTopOf="@id/platformFeeField" />


                    <TextView
                        android:id="@+id/grandTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_16"
                        android:fontFamily="@font/roboto_medium_500"
                        android:text="Grand Total"
                        android:textColor="@color/grey_900"
                        android:textSize="@dimen/text_16"
                        app:layout_constraintStart_toStartOf="@+id/itemDeliveryCharge"
                        app:layout_constraintTop_toBottomOf="@+id/platformFeeField" />

                    <TextView
                        android:id="@+id/tvGrandTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium_500"
                        android:text="Rs 351"
                        android:textColor="@color/grey_900"
                        android:textSize="@dimen/text_16"
                        app:layout_constraintEnd_toEndOf="@+id/tvItemPrice"
                        app:layout_constraintTop_toTopOf="@+id/grandTotal" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clSavings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_16"
                        android:background="@color/red_50"
                        android:paddingHorizontal="@dimen/space_16"
                        android:paddingVertical="@dimen/space_8"
                        android:visibility="visible"
                        app:layout_constraintTop_toBottomOf="@+id/tvGrandTotal">

                        <TextView
                            android:id="@+id/totalSaving"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium_500"
                            android:text="Your total savings"
                            android:textColor="@color/red_500"
                            android:textSize="@dimen/text_14"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvSavingText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-4dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Includes Rs 15 savings through free delivery"
                            android:textColor="@color/red_500"
                            android:textSize="@dimen/text_10"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/tvSavingAmount"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/totalSaving" />


                        <TextView
                            android:id="@+id/tvSavingAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium_500"
                            android:text="Rs 44"
                            android:textColor="@color/red_500"
                            android:textSize="@dimen/text_16"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clDeliveryInstructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_16"
                    android:background="@color/white"
                    android:elevation="1dp"
                    android:padding="@dimen/space_16"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clTaxPrices">


                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium_600"
                        android:text="Delivery instructions"
                        android:textColor="@color/grey_900"
                        android:textSize="@dimen/text_16"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView5">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView5">

                            <include
                                android:id="@+id/avoidCalling"
                                layout="@layout/item_delivery_instructions" />
                            <include
                                android:id="@+id/dnotRingBell"
                                layout="@layout/item_delivery_instructions" />

                            <include
                                android:id="@+id/leaveWithGuard"
                                layout="@layout/item_delivery_instructions" />

                            <include
                                android:id="@+id/leaveAtDoor"
                                layout="@layout/item_delivery_instructions" />


                        </LinearLayout>

                    </HorizontalScrollView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clTip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_16"
                    android:background="@color/white"
                    android:layout_marginBottom="@dimen/space_16"
                    android:paddingTop="@dimen/space_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clDeliveryInstructions">


                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_8"
                        android:fontFamily="@font/roboto_medium_600"
                        android:text="Delivery Partner Tip"
                        android:textColor="@color/grey_900"
                        android:textSize="@dimen/text_16"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_10"
                        android:scrollbars="none"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView6">

                        <com.google.android.material.chip.ChipGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginHorizontal="@dimen/space_8">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipCpp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/white_rounded"
                                android:text="ðŸ˜ƒ Rs 20" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip30"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/white_rounded"
                                android:text="ðŸ¤© Rs 30" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip50"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/white_rounded"
                                android:text="ðŸ¥° Rs 50" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipCustom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/white_rounded"
                                android:text="ðŸ¤© Custom" />

                        </com.google.android.material.chip.ChipGroup>


                    </HorizontalScrollView>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="@dimen/space_10"
                android:src="@drawable/icon_location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textview8" />

            <TextView
                android:id="@+id/textview8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_10"
                android:layout_marginTop="@dimen/space_10"
                android:fontFamily="@font/roboto_regular"
                android:text="Delivering to"
                android:textColor="@color/grey_900"
                android:textSize="@dimen/text_12"
                app:layout_constraintEnd_toStartOf="@+id/tvChangeAddress"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDeliveryAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_10"
                android:layout_marginTop="-4dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Sambhal, Uttar Pradesh"
                android:textColor="@color/grey_700"
                android:textSize="@dimen/text_10"
                app:layout_constraintEnd_toEndOf="@+id/textview8"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toBottomOf="@+id/textview8" />

            <TextView
                android:id="@+id/tvChangeAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Change"
                android:layout_margin="@dimen/space_10"
                android:textColor="@color/green_500"
                android:textSize="@dimen/text_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/grey_200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDeliveryAddress" />

            <TextView
                android:id="@+id/textview10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginTop="@dimen/space_10"
                android:text="To Pay"
                android:textColor="@color/grey_700"
                android:textSize="@dimen/text_10"
                app:layout_constraintStart_toStartOf="@+id/imageView5"
                app:layout_constraintTop_toBottomOf="@+id/view3" />

            <TextView
                android:id="@+id/tvTotalPayAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium_500"
                android:text="Rs 107"
                android:textColor="@color/grey_900"
                android:textSize="@dimen/text_14"
                app:layout_constraintStart_toStartOf="@+id/imageView5"
                app:layout_constraintTop_toBottomOf="@+id/textview10" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_16"
                android:layout_marginBottom="@dimen/space_10"
                android:background="@drawable/white_rounded"
                android:backgroundTint="@color/green_500"
                android:fontFamily="@font/roboto_bold"
                android:paddingHorizontal="@dimen/space_20"
                android:text="Pay by Cash/UPI on delivery"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvTotalPayAmount"
                app:layout_constraintTop_toTopOf="@+id/textview10" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/dashLottie"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_repeatCount="10"
                app:lottie_fileName="empty_cart.json"
                app:tint="@color/green_500" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_16"
                android:layout_marginTop="-15dp"
                android:fontFamily="@font/roboto_medium_500"
                android:text="Cart is empty"
                android:textColor="@color/green_500"
                android:textSize="@dimen/text_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dashLottie" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnExplore"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingHorizontal="@dimen/space_30"
                android:layout_marginTop="@dimen/space_20"
                android:background="@drawable/rouned_border"
                android:fontFamily="@font/roboto_bold"
                android:text="Explore Products"
                android:textAllCaps="false"
                android:textColor="@color/red_500"
                android:textSize="@dimen/text_14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>