<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clWallet">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/iconOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circle_view"
            android:backgroundTint="@color/green_50"
            android:padding="@dimen/space_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivItem"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_shopping"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/green_700" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_16"
            android:fontFamily="@font/roboto_medium_500"
            android:text="Your Order"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_14"
            app:layout_constraintBottom_toBottomOf="@+id/iconOrder"
            app:layout_constraintEnd_toStartOf="@+id/ivPrivacyArrow"
            app:layout_constraintStart_toEndOf="@+id/iconOrder"
            app:layout_constraintTop_toTopOf="@+id/iconOrder" />

        <ImageView
            android:id="@+id/ivPrivacyArrow"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:rotation="-180"
            app:tint="@color/grey_700"
            android:src="@drawable/icon_back2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/space_16"
            android:background="@color/grey_200"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivPrivacyArrow" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>